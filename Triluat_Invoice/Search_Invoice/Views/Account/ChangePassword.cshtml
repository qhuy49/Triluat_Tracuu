@model Search_Invoice.Models.PassModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<section class="content-header">
        <h1>Danh mục người sử dụng người sử dụng</h1>
